<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/activity_to_do_background"
    tools:context="com.nilsson83gmail.linus.todo.TodoListActivity">

    <android.support.v7.widget.RecyclerView
        android:id="@+id/recyclerview_todolist"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="vertical" />

    <TextView
        android:id="@+id/tv_todo_list_error_message"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/todo_list_error_message"
        android:padding="16dp"
        android:textSize="20sp"
        android:visibility="invisible"/>

    <ProgressBar
        android:id="@+id/pb_loading_indicator"
        android:layout_width="42dp"
        android:layout_height="42dp"
        android:layout_gravity="center"
        android:visibility="invisible" />

</FrameLayout>
