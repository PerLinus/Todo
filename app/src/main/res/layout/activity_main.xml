<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/activity_main_background"
    tools:context="com.nilsson83gmail.linus.todo.MainActivity">

    <Button
        android:id="@+id/todoButton"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="150dp"
        android:text="Todo"
        android:textStyle="bold"
        android:textSize="20sp"
        android:textColor="@color/colorAccent"
        android:background="@drawable/roundedbutton"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/shoppingButton"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="73dp"
        android:text="Shopping"
        android:textStyle="bold"
        android:textSize="20sp"
        android:textColor="@color/colorAccent"
        android:background="@drawable/roundedbutton"
        app:layout_constraintStart_toStartOf="@+id/todoButton"
        app:layout_constraintTop_toBottomOf="@+id/todoButton" />

    <Button
        android:id="@+id/passwordButton"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="73dp"
        android:text="Passwords"
        android:textStyle="bold"
        android:textSize="20sp"
        android:textColor="@color/colorAccent"
        android:background="@drawable/roundedbutton"
        app:layout_constraintStart_toStartOf="@+id/shoppingButton"
        app:layout_constraintTop_toBottomOf="@+id/shoppingButton" />

</android.support.constraint.ConstraintLayout>
